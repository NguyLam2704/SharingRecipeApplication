<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    tools:context=".Activities.Forgotpass">

    <TextView
        android:id="@+id/tittle_forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineHeight="28sp"
        android:lineSpacingExtra="1sp"
        android:text="Quên mật khẩu"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/forgotpass_returns"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/oval_btn_background"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="@+id/tittle_forgotpass"
        app:layout_constraintEnd_toStartOf="@+id/tittle_forgotpass"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tittle_forgotpass"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Nhập email của tài khoản muốn thiết lập lại mật khẩu"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tittle_forgotpass"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/tittle_forgotpass"
        app:layout_constraintTop_toBottomOf="@+id/tittle_forgotpass" />


    <EditText
        android:id="@+id/forgotpass_edt_email"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/edittext_bound"
        android:drawablePadding="8dp"
        android:hint="Nhập email"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/color_cursor"
        app:layout_constraintEnd_toEndOf="@+id/tittle_forgotpass"
        app:layout_constraintStart_toStartOf="@+id/tittle_forgotpass"
        app:layout_constraintTop_toBottomOf="@+id/textemail" />

    <TextView
        android:id="@+id/textemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:lineHeight="26sp"
        android:lineSpacingExtra="7sp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/forgotpass_btn"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/color_primary"
        android:gravity="center"
        android:text="Thiết lập lại"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:circularflow_radiusInDP="30dp"
        app:layout_constraintEnd_toEndOf="@+id/forgotpass_edt_email"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="@+id/forgotpass_edt_email"
        app:layout_constraintTop_toBottomOf="@+id/forgotpass_edt_email" />

    <ProgressBar
        android:id="@+id/forgotpass_prgbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:visibility="gone"
        android:indeterminateTint="@color/color_primary"
        app:layout_constraintEnd_toEndOf="@+id/forgotpass_btn"
        app:layout_constraintStart_toStartOf="@+id/forgotpass_btn"
        app:layout_constraintTop_toBottomOf="@+id/forgotpass_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>