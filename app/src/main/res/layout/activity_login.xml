<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background">

    <TextView
        android:id="@+id/tittle_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineHeight="28sp"
        android:lineSpacingExtra="1sp"
        android:text="Đăng nhập"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/login_returns"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/oval_btn_background"
        android:backgroundTint="@color/grey_background"
        android:src="@drawable/arrow_back_item"
        app:layout_constraintBottom_toBottomOf="@+id/tittle_Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tittle_Login"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/login_edt_email"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_bound"
        android:drawablePadding="8dp"
        android:hint="Nhập email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/color_cursor"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:lineHeight="26sp"
        android:lineSpacingExtra="7sp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittle_Login" />

    <TextView
        android:id="@+id/tittle_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="324dp"
        android:gravity="center_vertical"
        android:lineHeight="26sp"
        android:lineSpacingExtra="7sp"
        android:text="Mật khẩu"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/login_edt_email"
        app:layout_constraintTop_toBottomOf="@+id/login_edt_email" />

    <EditText
        android:id="@+id/login_edt_password"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_bound"
        android:drawablePadding="8dp"
        android:hint="Nhập mật khẩu"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:drawableRight="@drawable/baseline_visibility_off_24"
        app:layout_constraintStart_toStartOf="@+id/tittle_password"
        app:layout_constraintTop_toBottomOf="@+id/tittle_password" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/color_primary"
        android:gravity="center_vertical|center_horizontal"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:circularflow_radiusInDP="30dp"
        app:layout_constraintEnd_toEndOf="@+id/login_edt_password"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/login_edt_password"
        app:layout_constraintTop_toBottomOf="@+id/login_edt_password" />

    <ProgressBar
        android:id="@+id/login_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="@+id/login_btn"
        app:layout_constraintStart_toStartOf="@+id/login_btn"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        android:indeterminateTint="@color/color_primary"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/login_txt_forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="7sp"
        android:text="Quên mật khẩu?"
        android:textColor="@color/color_primary"

        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/login_edt_password"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/login_edt_password"
        app:layout_constraintTop_toBottomOf="@+id/login_edt_password" />

    <TextView
        android:id="@+id/login_txt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:lineSpacingExtra="7sp"
        android:text="Đăng kí"

        android:textColor="@color/color_primary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="@+id/login_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:lineSpacingExtra="7sp"
        android:paddingRight="5dp"
        android:text="Bạn chưa có tài khoản ?"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/login_btn"
        app:layout_constraintHorizontal_bias="0.299"
        app:layout_constraintStart_toStartOf="@+id/login_btn"
        app:layout_constraintTop_toBottomOf="@+id/login_btn" />

    <include layout="@layout/privacy"/>

</androidx.constraintlayout.widget.ConstraintLayout>