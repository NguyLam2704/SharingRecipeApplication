<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/random_list_container"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_food"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:background="@drawable/image_detail_backgroud"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:lines="2"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_food"
            app:layout_constraintStart_toStartOf="@+id/imageView_food"
            app:layout_constraintTop_toBottomOf="@+id/imageView_food" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="4dp"
            android:src="@drawable/baseline_time"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_food"
            app:layout_constraintStart_toStartOf="@+id/imageView_food" />

        <TextView
            android:id="@+id/textView_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageLike"
            app:layout_constraintEnd_toStartOf="@+id/imageLike" />

        <ImageView
            android:id="@+id/imageLike"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="4dp"
            android:layout_marginEnd="271dp"
            android:layout_marginBottom="185dp"
            android:src="@drawable/baseline_save"
            app:layout_constraintBottom_toTopOf="@+id/textView_title"
            app:layout_constraintEnd_toEndOf="@+id/imageView_food" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>