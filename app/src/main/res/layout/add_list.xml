<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/edtName"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="240dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thongbao" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="80dp"
        android:width="120dp"
        android:height="50dp"
        android:background="@drawable/line_save_background"
        android:text="Thêm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/edtdv" />

    <EditText
        android:id="@+id/edtdv"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="240dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtQuan" />

    <TextView
        android:id="@+id/txtaddName"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:gravity="right"
        android:padding="10dp"
        android:text="Tên nguyên liệu:"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/edtName"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thongbao" />

    <TextView
        android:id="@+id/txtQuan"
        android:layout_width="88dp"
        android:layout_height="42dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:gravity="right"
        android:padding="10dp"
        android:text="Đơn vị:"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/edtdv"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDv" />

    <TextView
        android:id="@+id/txtDv"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:gravity="right"
        android:padding="10dp"
        android:text="Số lượng:"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/edtQuan"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtaddName" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="276dp"
        android:layout_marginTop="28dp"
        android:width="120dp"
        android:height="50dp"

        android:background="@drawable/line_save_background"
        android:text="Hủy"
        android:textColor="#FFA115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQuan" />

    <EditText
        android:id="@+id/edtQuan"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="240dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtName" />

    <TextView
        android:id="@+id/thongbao"
        android:layout_width="387dp"
        android:layout_height="62dp"
        android:layout_marginTop="48dp"
        android:padding="10dp"
        android:text="Thêm nguyên liệu mới!"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>