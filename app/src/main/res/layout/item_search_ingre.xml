<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_ingre"
    android:background="@drawable/edittext_bound">
    <ImageView
        android:id="@+id/img_ingre"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avocado"
        android:layout_marginStart="5dp"
        android:padding="4dp"
        />

    <CheckedTextView
        android:id="@+id/name_ingre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/img_ingre"
        android:gravity="center"
        android:padding="4dp"
        android:text="Ten nguyen lieu"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:textSize="18sp"
        android:enabled="true"
        />


</RelativeLayout>