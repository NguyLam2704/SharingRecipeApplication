<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SavedRecipeLayout"
    android:layout_width="120dp"
    android:layout_height="134dp">

    <ImageView
        android:id="@+id/imgGrRe"
        android:layout_width="100dp"
        android:layout_height="84dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="4dp"
        android:background="@drawable/image_detail_backgroud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txtGroRe"
        android:layout_width="148dp"
        android:layout_height="29dp"
        android:padding="5dp"
        android:text="Tên món ăn"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgGrRe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGrRe" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="148dp"
        android:layout_height="16dp"
        android:background="@drawable/image_detail_backgroud"
        android:paddingLeft="5dp"
        android:text="Xem công thức >"
        android:textAlignment="center"
        android:textColor="#979797"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgGrRe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGroRe" />

    <View
        android:visibility="gone"
        android:id="@+id/remove_groceries_recipe"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/baseline_remove_circle_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgGrRe" />

</androidx.constraintlayout.widget.ConstraintLayout>